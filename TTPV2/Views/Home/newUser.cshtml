
@{
    ViewBag.Title = "newUser";
}
@Scripts.Render("~/Scripts/newUser.js")


<div id="errorMessage">

</div>

<div id="confirmSave"> </div>

<div>
        <form class="form-group">
            <h2>
                Vous êtes nouveau client ?
            </h2>

            <label for="username"><strong>Identifiant</strong></label>
            <input type="text" class="form-control" placeholder="Identifiant"  name="username" id="username"/>

            <label for="firstname"><strong>Prénom</strong></label>
            <input type="text" class="form-control" placeholder="Prénom" name="firstname" id="firstname" />

            <label for="lastname"><strong>Nom</strong></label>
            <input type="text" class="form-control" placeholder="Nom" name="lastname" id="lastname" />

            <label for="email"><strong>Email</strong></label>
            <input type="text" class="form-control" placeholder="Email" name="email" id="email" />

            <label for="Age"><strong>Age</strong></label>
            <input type="text" class="form-control" placeholder="Age" name="Age" id="Age"  max="3"/>

            <label for="Genre"><strong>Genre</strong></label>
            <select id="Genre" class="form-control" placeholder="Genre" name="Genre">
                <option>
                    Femme
                </option>
                <option>
                    Homme
                </option>

            </select>
          
            <label for="mdp"><strong>Mot de Passe</strong></label>
            <input type="password" class="form-control" placeholder="mdp" name="mdp" id="mdp" />

            <label for="mdpconf"><strong>Confirmer Mot de Passe</strong></label>
            <input type="password" class="form-control" placeholder="mdpconf" name="mdpconf" id="mdpconf" />

            <input class="btn btn-default" id="inscription" value="S'inscrire'" onclick="saveNewUser()" />
        </form>
</div>